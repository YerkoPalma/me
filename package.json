{
  "name": "website",
  "version": "1.0.2",
  "description": "Awesome site created with choo-genesis",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "standard --verbose | snazzy",
    "start": "budo -p 8080 -H 0.0.0.0 index.js:bundle.js -- -t sheetify",
    "build": "NODE_ENV=production npm run build:js && npm run build:html && npm run build:assets",
    "build:js": "mkdir -p dist && browserify -t sheetify -p [ css-extract -o dist/bundle.css ] -p tinyify index.js -o dist/bundle.js",
    "build:html": "./node_modules/.bin/htmlminify -o dist/index.html index.html",
    "build:assets": "echo yerkopalma.me > dist/CNAME && cp favicon.ico dist && workbox-cli generate:sw",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "standard": {
    "ignore": [
      "service-worker.js",
      "dist/",
      "workbox-cli-config.js"
    ]
  },
  "author": "Yerko Palma",
  "license": "MIT",
  "dependencies": {
    "bel": "^5.1.3",
    "choo": "^6.5.0",
    "choo-service-worker": "^2.3.1",
    "marli": "^1.1.0",
    "sheetify": "^6.2.0",
    "tachyons": "^4.8.1"
  },
  "devDependencies": {
    "browserify": "^14.5.0",
    "budo": "^10.0.4",
    "css-extract": "^1.2.0",
    "gh-pages": "^1.0.0",
    "html-minify": "^0.3.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "tinyify": "^2.2.0"
  }
}
